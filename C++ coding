#include <iostream>
#include <vector>
#include <string>
#include <cstdlib>
#include <ctime>
using namespace std;

// Player class
class Player {
public:
    string name;
    int skill;

    Player(string n, int s) : name(n), skill(s) {}
};

// Team class
class Team {
public:
    string name;
    vector<Player> players;

    Team(string n) : name(n) {}

    void addPlayer(string pname, int skill) {
        players.push_back(Player(pname, skill));
    }

    int getStrength() {
        int total = 0;
        for (auto &p : players) {
            total += p.skill;
        }
        return total;
    }

    void showPlayers() {
        cout << "Players of " << name << ":\n";
        for (auto &p : players) {
            cout << "- " << p.name << " (Skill: " << p.skill << ")\n";
        }
    }
};

// Match class
class Match {
public:
    Team &team1;
    Team &team2;

    Match(Team &t1, Team &t2) : team1(t1), team2(t2) {}

    void play() {
        srand(time(0));
        int score1 = rand() % (team1.getStrength() / 10 + 3);
        int score2 = rand() % (team2.getStrength() / 10 + 3);

        cout << "\nMatch Result:\n";
        cout << team1.name << " " << score1 << " - " << score2 << " " << team2.name << endl;

        if (score1 > score2)
            cout << team1.name << " wins!\n";
        else if (score2 > score1)
            cout << team2.name << " wins!\n";
        else
            cout << "It's a draw!\n";
    }
};

// Main program
int main() {
    cout << "=== Football League Management System ===\n";

    // Create teams
    Team teamA("Thunder FC");
    Team teamB("Storm United");

    // Add players to Team A
    teamA.addPlayer("Alex", 80);
    teamA.addPlayer("Ben", 75);
    teamA.addPlayer("Chris", 85);

    // Add players to Team B
    teamB.addPlayer("David", 78);
    teamB.addPlayer("Ethan", 82);
    teamB.addPlayer("Frank", 76);

    // Show team details
    cout << "\nTeam Details:\n";
    teamA.showPlayers();
    teamB.showPlayers();

    // Play a match
    Match game(teamA, teamB);
    game.play();

    cout << "\n=== End of Simulation ===\n";
    return 0;
}
